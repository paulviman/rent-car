      <BorderPane prefHeight="200.0" prefWidth="784.0" styleClass="car-card" stylesheets="@css/fullpackstyle.css">
         <top>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="659.0" styleClass="car-card-name" stylesheets="@css/fullpackstyle.css" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="carBrand" prefHeight="37.0" prefWidth="77.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="carModel" contentDisplay="CENTER" prefHeight="40.0" prefWidth="97.0">
