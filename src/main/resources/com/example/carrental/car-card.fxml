<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrental.Controller.CarCardController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="500.0" styleClass="car-card" stylesheets="@css/fullpackstyle.css">
         <top>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="car-card-name" stylesheets="@css/fullpackstyle.css" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="carBrand" prefHeight="37.0" prefWidth="77.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="carModel" contentDisplay="CENTER" prefHeight="40.0" prefWidth="97.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
               </opaqueInsets>
            </HBox>
         </top>
         <left>
      <!--      <ImageView fx:id="carImage" fitHeight="171.0" fitWidth="207.0" pickOnBounds="true" preserveRatio="true" />-->
            <VBox prefHeight="100.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="availableLabel" text="Label">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="carPriceText" text="Price/day(euro)" />
                        <Label fx:id="carPrice" />
                     </children>
                     <opaqueInsets>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </opaqueInsets>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="carTransmisionText" text="Transmission" />
                        <Label fx:id="carTransmission" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="carSeatsText" text="Seats" />
                        <Label fx:id="carSeats" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
   <opaqueInsets>
      <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
   </opaqueInsets>
</AnchorPane>
