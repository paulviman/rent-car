                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
               </opaqueInsets>
            </HBox>
         </top>
         <center>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="779.0" spacing="10.0" BorderPane.alignment="CENTER">
